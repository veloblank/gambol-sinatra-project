<div class="signup-form">

  <form action="/registrations/users" method="post">
    <input type="text" name="email" placeholder="email" value="<%= @user.email unless @user.nil? ||@user.errors[:email] %>"><br>

    <input type="text" name="username" placeholder="username" value="<%= @user.username unless @user.nil? || @user.errors[:username]  %>"><br>

    <input type="text" name="password" placeholder="password" value="<%= @user.password unless @user.nil? || @user.errors[:password] %>"><br>

    <input type="submit" value="Create User">
  </form>
</div>
