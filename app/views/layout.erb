<head>
  <meta charset="utf-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge, chrome=1" />

  <title>GambolSinatraProject</title>

  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
  <link rel="stylesheet" href="/stylesheets/main.css" />
</head>

<body>
  <div class="page-wrapper">
    <div class="nav-bar">
      <ul>
        <li><a href="/users/dashboard">Dashboard</li></a>

        <% if Helpers.is_logged_in?(session) && Helpers.current_user(session).is_admin %>
            <div class="dropdown">
              <button class="dropbtn">Sports Props</button>
                <div class="dropdown-content">
                  <a href="/props/new">Create New Prop</a>
                  <a href="/props">View all Props</a>
                </div>
            </div>
        <% else %>
            <li><a href="/props">Sports Props</li></a>
        <% end %>

        <div class="dropdown">
          <button class="dropbtn">Betting Slips</button>
            <div class="dropdown-content">
              <a href="/betting-slips">My Betting Lists</a>
              <a href="/betting-slips/new">Create New Betting Slips</a>
            </div>
        </div>

      </ul>

      <div>
        <%if Helpers.is_logged_in?(session) %>
          <a href="/logout"><p id='logout'>Logout</p></a>
        <% else %>
          <a href="/registrations/signup"><span id='signup'>Sign up</span></a>
          <a href="/registrations/login"><span id='login'>Login</span></a>
        <% end %>
      </div>

      <div class="container">

        <%= yield %>

      </div>

      <div class="prop-sidenav">
        <% if !Helpers.is_logged_in?(session) %>
          <a href="/registrations/login">You Must Login to View List</a>
        <% else %>
            <% session["selected_props"].each do |prop| %>
                <div><a href="/props/<%= prop.id %>"><%= prop.title %></a></div>
              <% end %>
        <% end %>
      </div>


    </div>
  </div>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
</body>
